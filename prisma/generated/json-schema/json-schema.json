{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Event": {
      "type": "object",
      "properties": {
        "eventId": {
          "type": "integer"
        },
        "title": {
          "type": "string"
        },
        "category": {
          "type": "string",
          "enum": [
            "AUTO_BOAT_AIR",
            "BUSINESS_PROFESSIONAL",
            "CHARITY_CAUSES",
            "COMMUNITY_CULTURE",
            "FAMILY_EDUCATION",
            "FASHION_BEAUTY",
            "FILM_MEDIA_ENTERTAINMENT",
            "FOOD_DRINK",
            "GOVERNMENT_POLITICS",
            "HEALTH_WELLNESS",
            "HOBBIES_SPECIAL_INTEREST",
            "HOME_LIFESTYLE",
            "PERFORMING_VISUAL_ARTS",
            "RELIGION_SPIRITUALITY",
            "SCHOOL_ACTIVITIES",
            "SCIENCE_TECHNOLOGY",
            "SEASONAL_HOLIDAY",
            "SPORTS_FITNESS",
            "TRAVEL_OUTDOOR"
          ]
        },
        "location": {
          "type": "string"
        },
        "eventDurationType": {
          "type": "string",
          "enum": [
            "SINGLE",
            "RECURRING"
          ]
        },
        "startDate": {
          "type": "string",
          "format": "date-time"
        },
        "endDate": {
          "type": "string",
          "format": "date-time"
        },
        "images": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "summary": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "visibilityType": {
          "type": "string",
          "enum": [
            "DRAFT",
            "PUBLISHED"
          ]
        },
        "privacyType": {
          "type": "string",
          "enum": [
            "PUBLIC",
            "PRIVATE"
          ]
        },
        "tickets": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Ticket"
          }
        }
      }
    },
    "Ticket": {
      "type": "object",
      "properties": {
        "ticketId": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        },
        "quantity": {
          "type": "integer"
        },
        "price": {
          "type": "number"
        },
        "startDate": {
          "type": "string",
          "format": "date-time"
        },
        "endDate": {
          "type": "string",
          "format": "date-time"
        },
        "description": {
          "type": "string"
        },
        "event": {
          "$ref": "#/definitions/Event"
        },
        "promotion": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Promotion"
          }
        }
      }
    },
    "Promotion": {
      "type": "object",
      "properties": {
        "promotionId": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        },
        "promotionType": {
          "type": "string",
          "enum": [
            "LIMITED",
            "UNLIMITED"
          ]
        },
        "promotionValue": {
          "type": "number"
        },
        "quantity": {
          "type": "integer"
        },
        "startDate": {
          "type": "string",
          "format": "date-time"
        },
        "endDate": {
          "type": "string",
          "format": "date-time"
        },
        "ticket": {
          "$ref": "#/definitions/Ticket"
        }
      }
    },
    "User": {
      "type": "object",
      "properties": {
        "userId": {
          "type": "integer"
        },
        "email": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "username": {
          "type": "string"
        },
        "walletAddress": {
          "type": "string"
        },
        "profilePic": {
          "type": "string"
        },
        "bannerPic": {
          "type": "string"
        },
        "displayName": {
          "type": "string"
        },
        "notificationBySMS": {
          "type": "boolean"
        },
        "notificationByEmail": {
          "type": "boolean"
        },
        "twitterURL": {
          "type": "string"
        },
        "posts": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Post"
          }
        }
      }
    },
    "Collection": {
      "type": "object",
      "properties": {
        "collectionId": {
          "type": "integer"
        },
        "description": {
          "type": "string"
        },
        "fixedPrice": {
          "type": "number"
        },
        "currency": {
          "type": "string",
          "default": "USD",
          "enum": [
            "USD",
            "ETH",
            "BTC",
            "USDC"
          ]
        },
        "collectionState": {
          "type": "string",
          "default": "CREATED",
          "enum": [
            "CREATED",
            "ON_SALE",
            "SOLD"
          ]
        },
        "collections": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/CollectionMedia"
          }
        }
      }
    },
    "CollectionMedia": {
      "type": "object",
      "properties": {
        "collectionMediaId": {
          "type": "integer"
        },
        "media": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "numOfMerch": {
          "type": "integer"
        },
        "collection": {
          "$ref": "#/definitions/Collection"
        }
      }
    },
    "Post": {
      "type": "object",
      "properties": {
        "postId": {
          "type": "integer"
        },
        "title": {
          "type": "string"
        },
        "content": {
          "type": "string"
        },
        "published": {
          "type": "boolean"
        },
        "user": {
          "$ref": "#/definitions/User"
        }
      }
    }
  },
  "type": "object",
  "properties": {
    "event": {
      "$ref": "#/definitions/Event"
    },
    "ticket": {
      "$ref": "#/definitions/Ticket"
    },
    "promotion": {
      "$ref": "#/definitions/Promotion"
    },
    "user": {
      "$ref": "#/definitions/User"
    },
    "collection": {
      "$ref": "#/definitions/Collection"
    },
    "collectionMedia": {
      "$ref": "#/definitions/CollectionMedia"
    },
    "post": {
      "$ref": "#/definitions/Post"
    }
  }
}